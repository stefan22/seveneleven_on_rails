
    <h1 style="text-align:center; margin-bottom:2em;">
      Here you'll find a list of Seven Elevens listed by locations</h1>

    <% if @sevens.any? %>
      <% @sevens.each do |seven| %>
        <h2><%= link_to seven.name, seven_path(seven) %></h2>
        <h4><%= link_to "Edit #{seven.name}", edit_seven_path(seven) %></h4>
        <h4><%= link_to "Delete #{seven.name}", seven_path(seven), method: :delete %></h4>
        <h4><%= link_to "Review #{seven.name}", new_seven_review_path(seven) %></h4>

        <h3>Reviews for <%= seven.name %></h3>

            <% if seven.reviews.any? %>
              <ul>
                <% seven.reviews.each do |review| %>
                  <li>
                    <%= review.thoughts %>, <strong><%= review.rating %></strong>/5
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p>No reviews.</p>
            <% end %>




      <% end %>
    <% else %>
        <h2>No sevens have been added yet</h2>
    <% end %>

    <div style="margin-top:2em; padding:1em;background-color:#f4f4f4;border-radius:5px;width:90px;
            text-align:center;border-color:#f0f0f0;">
            <a href="sevens/new">Add a Seven</a>
    </div>
